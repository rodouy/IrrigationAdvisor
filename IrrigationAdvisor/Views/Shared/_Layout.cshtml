<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Irrigation Advisor</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-2.1.4.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.js")"></script>
    <script src="@Url.Content("~/Scripts/jssor.slider.mini.js")"></script>



    @RenderSection("css", false)



</head>
<body style="padding-top: 0px;">
    <div class="navbar navbar-inverse " style="width: 970px; margin:auto; border-top-right-radius:35px; border-bottom-left-radius: 35px;height: 69px; background: #013572;">
        <div class="main-nav" style="padding-left: 25px; ">
            <div class="navbar-header">


                <a title="Go to the home page" href="/" class="main-nav__logo">
                    <img src="../Content/Image/logo.svg" alt="PGG Wrightson">
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated
                        )
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>

    </div>





    <div class="container">
        @RenderBody()
        <hr />

    </div>
    <footer style="width:970px; margin:auto; background-color: #013572; height:100px;font-size: 15px;color: white;">
        <p style="font-size:15px; margin-left:10px">&copy; @DateTime.Now.Year - Irrigation Advisor</p>
    </footer>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)






</body>
</html>
